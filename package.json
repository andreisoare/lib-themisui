{
  "name": "themis-ui",
  "version": "0.0.1",
  "description": "A Baseline of style and components used by Clio's web applications.",
  "author": "Sean Healy <sean.healy@clio.com>, Geoff Thierman <geoff.thierman@clio.com>",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "angular": "^1.3.14",
    "angular-animate": "^1.3.14",
    "markdown": "^0.5.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.3.14",
    "browserify": "^9.0.3",
    "coffee-script": "^1.9.1",
    "coffeeify": "^1.0.0",
    "connect": "^3.3.4",
    "glob": "^5.0.2",
    "gulp": "^3.8.11",
    "karma": "^0.12.31",
    "node-sass": "^3.0.0-pre",
    "serve-static": "^1.9.1",
    "watchify": "^2.4.0"
  },
  "scripts": {
    "th-build": "browserify -t coffeeify --extension=\".coffee\" themis_components/index.coffee > lib/ThemisUI.js",
    "th-watch": "watchify -t coffeeify --extension=\".coffee\" themis_components/index.coffee -o lib/ThemisUI.js",
    "th-alone": "browserify -t coffeeify --extension=\".coffee\" themis_components/index.coffee --standalone themis_components > lib/ThemisUI.standalone.js",
    "docs-build": "browserify -t coffeeify --extension=\".coffee\" docs/index.coffee > docs/build/docs.js",
    "docs-watch": "watchify -t coffeeify --extension=\".coffee\" docs/index.coffee -o docs/build/docs.js"
  }
}
