{
  // Error

  "arrow_spacing": {
    "level": "error"
  },

  "colon_assignment_spacing": {
    "spacing": {
      "left": 0,
      "right": 1
    },
    "level": "error"
  },

  "no_empty_param_list": {
    "level": "error"
  },

  "spacing_after_comma": {
    "level": "error"
  },

  "no_this": {
    "level": "error"
  },

  "braces_spacing": {
    "empty_object_spaces": 0,
    "spaces": 0,
    "level": "error"
  },

  "no_interpolation_in_single_quotes": {
    "level": "error"
  },

  "space_operators": {
    "level": "error"
  },

  // Warn

  "cyclomatic_complexity": {
    "value": 5,
    "level": "warn"
  },

  "no_stand_alone_at": {
    "level": "warn"
  },

  // We should consider enabling these.

  "no_implicit_braces": {
    "level": "ignore"
  },

  "prefer_english_operator": {
    "level": "ignore"
  },

  // Ignore

  "max_line_length": {
    "name": "max_line_length",
    "value": 80,
    "level": "ignore",
    "limitComments": true
  }
}
